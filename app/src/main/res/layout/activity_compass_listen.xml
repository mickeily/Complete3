<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompassListen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#C3BFBF"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C3BFBF"
            android:foreground="@drawable/back"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:onClick="retorceder"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/b_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#FFFFFF"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:onClick="proyectarRespuestas"
            android:padding="24dp"
            android:textAllCaps="false"
            android:textSize="48sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/b_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C3BFBF"
            android:foreground="@drawable/forward"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:onClick="adelantar"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#C3BFBF"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>